<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body class="adlp">
    <div class="b-box">
        <h1>Admin Login</h1>
        <form action="/admin/DashBoard" method="POST">
            <div class="field">
                <label for="adid">Admin Id</label>
                <input type="text" pattern="[0-9]{6}" name="adid" id="adid" placeholder="6 digit Admin Id" required>
            </div>
            <div class="field">
                <label for="password">Admin Password</label>
                <input type="password" name="password" id="password" placeholder="Admin Password" required>
            </div>
            <div class="field">
                <input type="submit" value="Log In">
            </div>
        </form>
    </div>
</body>
</html>