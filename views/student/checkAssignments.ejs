<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student | Check Assignments</title>
    <link rel="stylesheet" href="/StudentDashboard.css">
    <link rel="stylesheet" href="/studentAssignments.css">
    <link rel="stylesheet" href="/adminNavbar.css">
</head>
<body>
    <div class="dashboard">
        <%- include('../partials/studentDashboard.ejs') %>
    </div>
    <main>
        <%- include('../partials/studentNavbar.ejs') %>
        <h1>Assignments</h1>

        <% if(assignments.length!=0){ %>
            <% assignments.forEach((assignment,index)=>{ %>
                <% if(assignment.forSem == student.sem){ %> 
                    <% if(assignment.forBranch == student.branch){ %>
                        <a href="/student/viewAssignment/<%= assignment._id %>" target="_blank">
                            <div class="assignment">
                                <h3><%= assignment.title %></h3>
                                <div class="ass-content">
                                    <img src="data:assignment/<%=assignment.img.contentType %>;base64, <%=assignment.img.data.toString('base64')%>" class="card-img-top" alt="Image Not Found">
                                    
                                    <div class="info">
                                        <% if(assignment.desc){ %>
                                            <p><b>Description : </b><%= assignment.desc %></p>
                                        <% }else{ %>
                                            <p><b>Description : </b>No Description Added</p>
                                        <% } %>
                                       <p>Submit this assignment to <b><%= assignment.author %></b></p>
                                    </div>

                                </div>
                            </div>
                        </a>
                    <% } %>
                <% } %>
            <% }) %>
        <% }else{ %>
            <p>No Assignment uploaded by you</p>
        <% } %>


    </main>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>