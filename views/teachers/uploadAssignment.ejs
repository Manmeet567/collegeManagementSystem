<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher | Upload Assignment</title>
    <link rel="stylesheet" href="/TeacherDashboard.css">
    <link rel="stylesheet" href="/adminNavbar.css">
</head>
<body>
    <div class="dashboard">
        <%- include('../partials/teacherDashboard.ejs') %>
    </div>
    <main>
        <%- include('../partials/teacherNavbar.ejs') %>

        <div class="up-assingment">

            <div class="nb-content">
                <form action="/teacher/uploadAssignment" method="post" enctype="multipart/form-data">
                    <p>Upload Assignment</p>
                    <div class="nh-border"></div>
                    <div class="inf">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" placeholder="Enter Title" required>
                    </div>
                    <div class="inf">
                        <input type="file" name="img" accept="image/*" required>
                    </div>
                    <div class="inf">
                        <label for="author">Description</label>
                        <textarea type="text" name="desc" id="author" placeholder="Add Description (Optional)" ></textarea>
                    </div>
                    <div class="sf">
                        <div class="fBranch">
                            <label for="forBranch">For Branch</label>
                            <select name="forBranch" id="forBranch">
                                <option value="CSE">CSE</option>
                                <option value="ECE">ECE</option>
                                <option value="ME">ME</option>
                                <option value="CE">CE</option>
                            </select>
                        </div>
                        <div class="fSem">
                            <label for="forSem">For Semester</label>
                            <select name="forSem" id="forSem">
                                <option value="1">1st Sem</option>
                                <option value="2">2nd Sem</option>
                                <option value="3">3rd Sem</option>
                                <option value="4">4th Sem</option>
                                <option value="5">5th Sem</option>
                                <option value="6">6th Sem</option>
                                <option value="7">7th Sem</option>
                                <option value="8">8th Sem</option>
                            </select>
                        </div>
                    </div>
                    <input class="sub-btn" type="submit" value="Create">
                </form>
            </div>
        </div>
    </main>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>